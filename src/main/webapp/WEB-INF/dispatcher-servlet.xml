<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	   	   
	   <bean class="com.google.code.morphia.Morphia" id="morphia" />
	   <bean class="com.mongodb.Mongo" id="mongo" />
	   <bean class="webapp.CompanyDAO" id="companyDao">
	   	<constructor-arg ref="morphia" index="0" />
	   	<constructor-arg ref="mongo" index="1" />
	   	<constructor-arg value="CompanyDb" index="2" />
	   </bean>
	   
	   <bean class="webapp.FinancialOrgDAO" id="financialOrgDao">
	   	<constructor-arg ref="morphia" index="0" />
	   	<constructor-arg ref="mongo" index="1" />
	   	<constructor-arg value="CompanyDb" index="2" />
	   </bean>
	   
	   <bean name="/list.htm" class="webapp.FetchDataController">
	   	<constructor-arg ref="companyDao" />
	   </bean>
	   
	   <bean name="/companies/*" class="webapp.CompanyProfileController">
	   	<constructor-arg ref="companyDao" />
	   </bean>
	   
	   <bean name="/industry/*" class="webapp.VisualizeIndustryController">
	   	 <constructor-arg ref="companyDao" />
	   </bean>
	   
	   <bean name="/populate_db.htm" class="webapp.PopulateDbController">
	   	<constructor-arg ref="companyDao" />
	   </bean>
	   
	   <bean name="/populate_financial.htm" class="webapp.PopulateFinancialController">
	   	<constructor-arg ref="financialOrgDao" index="0" />
	   	<constructor-arg ref="companyDao" index="1" />
	   </bean>
	   
	   <bean name="/home.htm" class="webapp.VisualizeDbController">
	   	<constructor-arg ref="companyDao" />
	   </bean>
	   
	   <bean name="/vis2.htm" class="webapp.VisualizeFinancialController">
	   	<constructor-arg ref="financialOrgDao" />
	   </bean>
	   
	   <bean name="/vis3.htm" class="webapp.VisualizeMapController">
	   	<constructor-arg ref="companyDao" />
	   </bean>
	   
	   <bean name="/*.htm" class="webapp.BasicPageController">
	   </bean>
	  
	   
	   
	   <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	   	<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".jsp"></property>
	   </bean>
</beans>